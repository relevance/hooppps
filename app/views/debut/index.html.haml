%h3.feed-name DEBUTS
#content
  = render :partial => "shots/shots"
  - if @page == 1
    = link_to raw("more shots &rsaquo;"), debut_index_path(:page => @page + 1), :class => 'big-pink'
  - elsif @page > 1 && @page < @shots.pages
    = link_to raw("&laquo; back to start"), debut_index_path , :class => 'big-pink-third'
    = link_to raw("&lsaquo; previous"), debut_index_path(:page => @page - 1), :class => 'big-pink-third'
    = link_to raw("next &rsaquo;"), debut_index_path(:page => @page + 1), :class => 'big-pink-third'
  - elsif @page == @shots.pages
    = link_to raw("&laquo; back to start"), debut_index_path , :class => 'big-pink-half'
    = link_to raw("&lsaquo; previous shots"), debut_index_path(:page => @page - 1), :class => 'big-pink-half'

